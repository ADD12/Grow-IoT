    "test": "mocha build/test-bundle.js",
    "prepublish": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CommonGarden/Thing.js"
  },
  "keywords": [
    "IoT",
    "Internet of Things",
    "thing"
  ],
  "author": "CommonGarden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CommonGarden/Thing.js/issues"
  },
  "files": [
    "lib",
    "dist"
  ],
  "homepage": "https://github.com/CommonGarden/Thing.js",
  "dependencies": {
    "Thing.js": "^0.2.0",
    "ddp": ">=0.11.0",
    "ddp-ejson": ">=0.8.1-3",
    "johnny-five": "^0.9.49",
    "meteor-later": "^1.2.0",
    "regression": "^1.2.1",
    "rsvp": "^3.2.1",
    "underscore": ">=1.8.3",
    "validate": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "chai": "^3.5.0",
    "eslint": "^2.5.3",
    "mocha": "^2.4.5",
    "mr-doc-theme-cayman": "^1.4.1",
    "rollup": "^0.26.2",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-multi-entry": "^1.2.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "source-map-support": "^0.4.0"
